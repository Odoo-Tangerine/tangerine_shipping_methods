<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="product_product_delivery_nhat_tin" model="product.product">
            <field name="name">Delivery charges</field>
            <field name="default_code">Nhat Tin</field>
            <field name="type">service</field>
            <field name="categ_id" ref="delivery.product_category_deliveries"/>
            <field name="sale_ok" eval="False"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price">0.0</field>
            <field name="invoice_policy">order</field>
        </record>

        <record id="tangerine_delivery_nhat_tin_provider" model="delivery.carrier">
            <field name="name">Nhat Tin Logistics</field>
            <field name="fixed_price">0.0</field>
            <field name="free_over" eval="False"/>
            <field name="invoice_policy">real</field>
            <field name="sequence">2</field>
            <field name="delivery_type">nhat_tin</field>
            <field name="domain">https://apisandbox.ntlogistics.vn</field>
            <field name="product_id" ref="tangerine_delivery_nhat_tin.product_product_delivery_nhat_tin"/>
            <field name="is_locally_delivery" eval="True"/>
            <field name="is_support_multi_stop_delivery" eval="True"/>
            <field name="base_weight_unit">KG</field>
            <field name="carrier_description">Nhat Tin Logistics APIs will allow shipper to easily place, cancel, get quotes and track the order via simple integration</field>
        </record>

        <function model="delivery.carrier" name="set_webhook_url">
            <value eval="[ref('tangerine_delivery_nhat_tin_provider')]"/>
        </function>
    </data>
</odoo>