<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ntl_create_bill" model="delivery.route.api">
            <field name="provider_id" ref="tangerine_delivery_nhat_tin.tangerine_delivery_nhat_tin_provider" />
            <field name="name">Create Bill</field>
            <field name="code">ntl_create_bill</field>
            <field name="route">/v2/bill/create</field>
            <field name="method">POST</field>
            <field name="headers">'{"Cache-Control": "no-cache", "Content-Type": "application/json"}'</field>
            <field name="is_need_access_token" eval="True"/>
        </record>

        <record id="ntl_calculate_price" model="delivery.route.api">
            <field name="provider_id" ref="tangerine_delivery_nhat_tin.tangerine_delivery_nhat_tin_provider" />
            <field name="name">Calculate Price</field>
            <field name="code">ntl_calculate_price</field>
            <field name="route">/v1/bill/calc-fee</field>
            <field name="method">POST</field>
            <field name="headers">'{"Cache-Control": "no-cache", "Content-Type": "application/json"}'</field>
            <field name="is_need_access_token" eval="True"/>
        </record>

        <record id="ntl_cancel_bill" model="delivery.route.api">
            <field name="provider_id" ref="tangerine_delivery_nhat_tin.tangerine_delivery_nhat_tin_provider" />
            <field name="name">Cancel Bills</field>
            <field name="code">ntl_cancel_bill</field>
            <field name="route">/v1/bill/destroy</field>
            <field name="method">POST</field>
            <field name="headers">'{"Cache-Control": "no-cache", "Content-Type": "application/json"}'</field>
            <field name="is_need_access_token" eval="True"/>
        </record>

        <record id="ntl_print_bill" model="delivery.route.api">
            <field name="provider_id" ref="tangerine_delivery_nhat_tin.tangerine_delivery_nhat_tin_provider" />
            <field name="name">Print Bill</field>
            <field name="code">ntl_print_bill</field>
            <field name="route">v1/bill/print?do_code={bill_code}&amp;partner_id={partner_id}</field>
            <field name="method">GET</field>
            <field name="headers">'{"Cache-Control": "no-cache", "Content-Type": "application/json"}'</field>
            <field name="is_need_access_token" eval="True"/>
        </record>
    </data>
</odoo>