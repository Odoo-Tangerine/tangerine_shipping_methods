<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form_inherit_delivery_nhat_tin" model="ir.ui.view">
        <field name="name">view.picking.withcarrier.out.form.inherit.delivery.nhat.tin</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_picking_withcarrier_out_form_inherit_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='promo_code']" position="before">
                <field name="ntl_service_type" required="delivery_type == 'nhat_tin'" invisible="delivery_type != 'nhat_tin'"/>
                <field name="ntl_payment_method" required="delivery_type == 'nhat_tin'" invisible="delivery_type != 'nhat_tin'"/>
                <field name="ntl_cargo_type" invisible="delivery_type != 'nhat_tin'"/>
            </xpath>
        </field>
    </record>
</odoo>