<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_nhat_tin" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.nhat.tin</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_delivery_carrier_form_with_provider_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('api_config_group')]" position='after'>
                <field name="ntl_partner_id" widget="CopyClipboardChar" invisible="delivery_type != 'nhat_tin'"/>
            </xpath>
            <xpath expr="//field[@name='default_promo_code']" position='after'>
                <field name="default_ntl_service_type" invisible="delivery_type != 'nhat_tin'"/>
                <field name="default_ntl_cargo_type" invisible="delivery_type != 'nhat_tin'"/>
                <field name="default_ntl_payment_method" invisible="delivery_type != 'nhat_tin'"/>
            </xpath>
            <xpath expr="//field[@name='default_promo_code']" position="attributes">
                <attribute name="invisible">delivery_type == 'nhat_tin'</attribute>
            </xpath>
            <xpath expr="//group[@name='delivery_token']" position="attributes">
                <attribute name="invisible">delivery_type == 'nhat_tin'</attribute>
            </xpath>
            <xpath expr="//button[@name='get_access_token']" position="attributes">
                <attribute name="invisible">delivery_type == 'nhat_tin'</attribute>
            </xpath>
        </field>
    </record>
</odoo>