<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_grab_express" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.grab.express</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_delivery_carrier_form_with_provider_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='domain']" position='after'>
                <field name="grab_partner_id" widget="CopyClipboardChar" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="grab_client_id" widget="CopyClipboardChar" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="grab_client_secret" widget="CopyClipboardChar" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
            </xpath>
            <xpath expr="//field[@name='access_token']" position="before">
                <field name="grab_grant_type" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="grab_scope" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="grab_expire_token_date" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
            </xpath>
            <xpath expr="//field[@name='default_promo_code']" position='after'>
                <field name="default_grab_payer" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="default_grab_service_type" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="default_grab_vehicle_type" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
                <field name="default_grab_payment_method" attrs="{'invisible': [('delivery_type', '!=', 'grab')]}"/>
            </xpath>
        </field>
    </record>
</odoo>