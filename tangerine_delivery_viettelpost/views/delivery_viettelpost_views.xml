<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_viettelpost" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.viettelpost</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_delivery_carrier_form_with_provider_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('api_config_group')]" position='after'>
                <field name="viettelpost_username" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="viettelpost_password" password="1" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
            </xpath>
            <xpath expr="//field[@name='token_type']" position="attributes">
                <attribute name="attrs">{'invisible': [('delivery_type', '=', 'viettelpost')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='default_promo_code']" position='after'>
                <field name="default_viettelpost_order_payment" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="default_viettelpost_product_type" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="default_viettelpost_national_type" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="default_print_order_paper" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="default_viettelpost_service_id" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
                <field name="default_viettelpost_service_extend_id" attrs="{'invisible': [('delivery_type', '!=', 'viettelpost')]}"/>
            </xpath>
        </field>
    </record>
</odoo>