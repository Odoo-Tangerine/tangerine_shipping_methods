<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form_inherit_delivery_lalamove" model="ir.ui.view">
        <field name="name">view.picking.withcarrier.out.form.inherit.delivery.lalamove</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_picking_withcarrier_out_form_inherit_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@name='o_label_cash_on_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('delivery_type', '=', 'lalamove')]}</attribute>
            </xpath>
            <xpath expr="//div[@name='o_div_cash_on_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('delivery_type', '=', 'lalamove')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='promo_code']" position="after">
                <field name="lalamove_got_quotation" invisible="1"/>
                <field name="is_lalamove_goods_fragile" widget="boolean_toggle" attrs="{'invisible': [('delivery_type', '!=', 'lalamove')]}"/>
                <field name="lalamove_service_id"
                       options="{'no_create_edit': True}"
                       attrs="{'invisible': [('delivery_type', '!=', 'lalamove')],'required': ['&amp;', ('delivery_type', '=', 'lalamove'), ('lalamove_got_quotation', '=', False)]}"
                />
                <field name="lalamove_special_service_ids"
                       widget="many2many_tags"
                       options="{'no_create_edit': True}"
                       attrs="{'invisible': [('delivery_type', '!=', 'lalamove')]}"
                />
            </xpath>
            <xpath expr="//field[@name='promo_code']" position="attributes">
                <attribute name="attrs">{'invisible': [('delivery_type', '=', 'lalamove')]}</attribute>
            </xpath>
            <xpath expr="//strong[@name='o_strong_schedule_pickup_time_from']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('delivery_type', '=', 'lalamove'), ('schedule_order', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//strong[@name='o_strong_schedule_pickup_time_to']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('delivery_type', '=', 'lalamove'), ('schedule_order', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='schedule_pickup_time_from']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('delivery_type', '=', 'lalamove'), ('schedule_order', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='delivery_carrier_data']" position="attributes">
                <attribute name="attrs">{'invisible': ['&amp;', ('lalamove_got_quotation', '=', True), ('delivery_type', '=', 'lalamove')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>