<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form_inherit_delivery_ghtk" model="ir.ui.view">
        <field name="name">view.picking.withcarrier.out.form.inherit.delivery.ghtk</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="tangerine_delivery_base.view_picking_withcarrier_out_form_inherit_delivery_base"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='promo_code']" position="attributes">
                <attribute name="invisible">delivery_type == 'ghtk'</attribute>
            </xpath>
            <xpath expr="//label[@name='o_label_schedule_order']" position="attributes">
                <attribute name="invisible">delivery_type == 'ghtk'</attribute>
            </xpath>
            <xpath expr="//div[@name='o_schedule_order']" position="attributes">
                <attribute name="invisible">delivery_type == 'ghtk'</attribute>
            </xpath>
            <xpath expr="//div[@name='o_div_cash_on_delivery']" position="after">
                <field name="ghtk_transport_type"
                       required="delivery_type == 'ghtk'"
                       invisible="delivery_type != 'ghtk'"
                />
                <field name="ghtk_service_type"
                       required="delivery_type == 'ghtk'"
                       invisible="delivery_type != 'ghtk'"
                />
                <field name="ghtk_payer_type"
                       required="delivery_type == 'ghtk'"
                       invisible="delivery_type != 'ghtk'"
                />
                <field name="ghtk_special_service_type_ids"
                       widget="many2many_tags"
                       options="{'no_create_edit': True}"
                       invisible="delivery_type != 'ghtk'"
                />
                <field name="ghtk_pick_shift" invisible="delivery_type != 'ghtk'"/>
                <field name="ghtk_deliver_shift" invisible="delivery_type != 'ghtk'"/>
            </xpath>
        </field>
    </record>
</odoo>